datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Card {
  id           String     @id @default(uuid())
  frontLanguage        String
  frontItem     String
  frontPronunciation String
  frontExample   String
  frontStatus Int
  frontDate DateTime   @default(now())
  backLanguage        String
  backItem    String
  backPronunciation String
  backExample   String
  backStatus Int
  backDate    DateTime   @default(now())
  userId  String
}

model User {
  id           String     @id
  sessionID        String
}